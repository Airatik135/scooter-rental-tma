import sqlite3

conn = sqlite3.connect('scooters.db')
cursor = conn.cursor()

# Добавляем недостающие колонки
cursor.execute("ALTER TABLE scooter ADD COLUMN speed NUMERIC DEFAULT 0.0;")
cursor.execute("ALTER TABLE scooter ADD COLUMN odometer INTEGER DEFAULT 0;")
cursor.execute("ALTER TABLE scooter ADD COLUMN last_seen DATETIME;")

conn.commit()
conn.close()

print("Колонки добавлены!")